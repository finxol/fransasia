{{#contentFor 'title'}}
    <title>fransasia</title>
{{/contentFor}}



<div id="welcome">
    <h1>Welcome to Fransasia !</h1>

    <article>
        <section>
            <h2>Business Mission</h2>
            <p>
                Enhancing the mutual understanding beyond origin and culture,
                for fruitful businesses to emerge and sustain
            </p>
        </section>
        <div class="separator vertical"></div>
        <section>
            <h2>Service</h2>
            <p>
                Fransasia is here for you, striving to iron out any of your difficulties
                in your Asian operations
            </p>
        </section>
    </article>
</div>

<form id="contact">
    <h2>Express your needs</h2>

    <section>
        <div>
            <label for="first-name">
                Full Name
                <div>
                    <input type="text" id="first-name" name="first-name" placeholder="John" required>
                    <input type="text" id="last-name" name="last-name" placeholder="Doe" required>
                </div>
            </label>
        </div>

        <label for="email">
            Email
            <input type="email" id="email" name="email" placeholder="johndoe@example.com" required>
        </label>

        <label for="message">
            What are your needs?
            <textarea id="message" name="message" placeholder="We would need to..." required></textarea>
        </label>

        <input type="submit" value="Send">
    </section>
</form>

<p>
    By living here we solve your far reached issues and time difference
    There is no more excuse not to deal with Asia
</p>
